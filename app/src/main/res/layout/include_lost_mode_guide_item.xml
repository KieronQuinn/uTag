<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/lost_mode_guide_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dp"
        android:layout_marginEnd="20.0dp"
        android:orientation="vertical"
        android:paddingBottom="22.0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4.0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lost_mode_guide_title"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:lineSpacingExtra="1.0sp"
                android:textColor="@color/lostModeGuideTitle"
                android:textSize="16.0sp" />

            <ImageView
                android:id="@+id/lost_mode_warning_icon"
                android:layout_width="16.0dp"
                android:layout_height="16.0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4.0dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_error_notice" />
        </LinearLayout>

        <TextView
            android:id="@+id/lost_mode_guide_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lostModeGuideSummary"
            android:textSize="13.0sp" />

        <TextView
            android:id="@+id/lost_mode_guide_subSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lostModeGuideSubSummary"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/lost_mode_guide_warningSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lostModeNotifyFoundWarning"
            android:textSize="12.0sp" />
    </LinearLayout>
</LinearLayout>
