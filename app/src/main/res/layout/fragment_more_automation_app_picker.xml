<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:inAnimation="@android:anim/fade_in"
    android:outAnimation="@android:anim/fade_out">

    <androidx.apppickerview.widget.AppPickerView
        android:id="@+id/app_picker_list"
        android:clipToPadding="false"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/app_picker_bottom_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.SeslProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Xlarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />

    </FrameLayout>

</ViewFlipper>